= form_for(@gripe) do |f|
  - if @gripe.errors.any?
    #error_explanation
      %h2
        = pluralize(@gripe.errors.count, "error")
        prohibited this gripe from being saved:
      %ul
        - @gripe.errors.full_messages.each do |msg|
          %li= msg
  %h3 Which bus number        
  .field
    = f.label :bus_number
    %br/
    = f.text_field :bus_number
  .field
    =f.label :gripe1
    %br
    =f.select(:gripe1, options_for_select([['Bus didn\'t stop', 1], ['Bicycle accident', 2],['Wheelchair problem', 3],['Child buggy problem', 4]]) )
  .field
    =f.label :gripe2
    %br
    =f.select(:gripe1, options_for_select([['Bus didn\'t stop', 1], ['Bicycle accident', 2],['Wheelchair problem', 3],['Child buggy problem', 4]]) )
  .field
    =f.label :gripe3
    %br
    =f.select(:gripe1, options_for_select([['Bus didn\'t stop', 1], ['Bicycle accident', 2],['Wheelchair problem', 3],['Child buggy problem', 4]]) )
  .field
    =f.label :gripe4
    %br
    =f.select(:gripe1, options_for_select([['Bus didn\'t stop', 1], ['Bicycle accident', 2],['Wheelchair problem', 3],['Child buggy problem', 4]]) )
  .field
    = f.label :picture
    %br/
    = f.file_field :picture
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  %h3 Where did this happen?  
  %b Enter address  
  .field
    = f.label :bus_stop
    %br/
    = f.text_field :bus_stop
  %b OR Enter address  
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.submit